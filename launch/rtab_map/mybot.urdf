<?xml version='1.0'?>


<robot
  name="mybot">

<!-- +++++++++++++++++++++++Robot Definition+++++++++++++++++++++++++ /-->

<!--Chassis & Caster Link /-->

 <link name='chassis'>

   <visual name='chassis_visual'>

      <origin xyz="0 0 0" rpy=" 0 0 0"/>

      <geometry>
        <box size=".6 .55 0.25"/>
      </geometry>

    </visual>    
     
   <inertial>

      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.5" ixy="0" ixz="0"
          iyy="1.0" iyz="0"
          izz="0.1"
      />

   </inertial>

   <collision name='collision'>
      <geometry>
        <box size=".6 .55 0.25"/>
      </geometry>
   </collision>



 <collision name='caster_collision'>
    <origin xyz="-0.2 0 -0.05" rpy=" 0 0 0"/>

    <geometry>
        <sphere radius="0.05"/>
    </geometry>

    <surface>

        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>

     </surface>

 </collision>

<visual name='caster_visual'>

     <origin xyz="-0.2 0 -0.05" rpy=" 0 0 0"/>

     <geometry>
      <sphere radius="0.05"/>
     </geometry>

</visual>

</link>


<!-- ++++++++++++++++Left wheel+++++++++++++++++++++++++++++++ /-->


<!--left wheel Joint /-->

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0.1 0.175 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>



<!--left wheel Link /-->

 <link name="left_wheel">

    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>


    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    

    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.1" h="0.05"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>

 </link>

<!-- +++++++++++++++++++ Right Wheel +++++++++++++++++++++++++++++++++ /-->

<!--Right wheel joint/-->
  <joint type="continuous" name="right_wheel_hinge">

    <origin xyz="0.1 -0.175 0" rpy="0 0 0"/>
    
    <child link="right_wheel"/>
    <parent link="chassis"/>

    <axis xyz="0 1 0" rpy="0 0 0"/>

    <limit effort="100" velocity="100"/>

    <joint_properties damping="0.0" friction="0.0"/>

  </joint>

<!--Right Wheel link /-->

  <link name="right_wheel">

    <visual name="right_wheel_visual">

      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>

      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>

    </visual>

    
    <collision name="collision">

      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>

      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>

    </collision>


    <inertial>

      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.1" h="0.05"/>

      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
      </inertial>

  </link>



<!-- +++++++++++++++++++ kinect +++++++++++++++++++++++++++++++++ /-->


<joint type="fixed" name="kinect">

    <origin xyz="0.1 -0.175 0" rpy="0 0 0"/>
    
    <child link="kinect"/>
    <parent link="chassis"/>

    <axis xyz="0 1 0" rpy="0 0 0"/>

  </joint>

<!--Right Wheel link /-->

  <link name="kinect">

    <visual name="kinect_visual">

      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>

      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>

    </visual>

    
    <collision name="collision">

      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>

      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>

    </collision>


    <inertial>

      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <cylinder_inertia m="5" r="0.1" h="0.05"/>

      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
      </inertial>

  </link>







</robot>
